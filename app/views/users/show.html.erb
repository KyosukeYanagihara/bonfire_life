<div class="mypage row">
  <div class="col-sm-5">
    <h2>MYページ</h2>
    <div class="mypage_main mt-5">
      <table>
        <colgroup>
          <col width="30%">
          <col width="70%">
        </colgroup>
        <tbody>
          <tr>
            <td>お名前</td>
            <td><%= @user.account.last_name + @user.account.first_name %></td>
          </tr>
          <tr>
            <td>お名前（フリガナ）</td>
            <td><%= @user.account.last_name_kana + @user.account.first_name_kana %></td>
          </tr>
          <tr>
            <td>郵便番号</td>
            <td><%= @user.address.postcode %></td>
          </tr>
          <tr>
            <td>住所</td>
            <td><%= @user.address.prefecture_name + @user.address.city + @user.address.address1 %></td>
          </tr>
          <tr>
            <td>メールアドレス</td>
            <td><%= @user.email %></td>
          </tr>
          <tr>
            <td>生年月日</td>
            <td><%= @user.account.birthday.strftime('%Y/%m/%d') %></td>
          </tr>
            <td>性別</td>
            <td><%= @user.account.sex %></td>
          </tr>
          <tr>
            <td>電話番号</td>
            <td><%= @user.account.contact_number %></td>
          </tr>
        </tbody>
      </table>
    </div>
  </div>
</div>
