<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
<div class="form-wrapper">
  <h1>ログイン</h1>
  <div style="color: red;"><%= content_tag(:div, flash[:alert], id: "flash_alert") if flash[:alert] %></div>
  <form>
    <div class="form-item">
      <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder: "メールアドレス" %>
    </div>
    <div class="form-item">
      <%= f.password_field :password, autocomplete: "current-password", placeholder: "パスワード" %>
    </div>
    <div class="button-panel">
      <%= f.submit "ログイン", class: "button" %>
    </div>
  </form>
  <div class="form-footer">
    <%= render "devise/shared/links" %>
  </div>
</div>
<% end %>